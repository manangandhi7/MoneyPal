<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_bank_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.MoneyPal.Activity.BankDetailsActivity"
    tools:showIn="@layout/activity_bank_details">


        <TextView
            android:textColor="@color/Black"
            android:text="Account Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20sp"
            android:textSize="24sp"
            android:id="@+id/account_number_textbox" />

    <EditText
        android:text="30001512992"
        android:textColor="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/account_number_textbox"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:id="@+id/account_number" />

        <TextView
            android:textColor="@color/Black"
            android:text="IFSC Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/account_number"
            android:layout_marginTop="20sp"
            android:textSize="24sp"
            android:id="@+id/ifsc_code_textbox" />

    <EditText
        android:text="SBIN0000438"
        android:textColor="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ifsc_code_textbox"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:id="@+id/ifsc_code" />


    <TextView
        android:textColor="@color/Black"
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ifsc_code"
        android:layout_marginTop="20sp"
        android:textSize="24sp"
        android:id="@+id/password_textbox" />

    <EditText
        android:text="mySecretPassword"
        android:id="@+id/bank_acc_passwod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeActionId="@+id/login"
        android:layout_below="@+id/password_textbox"
        android:layout_marginTop="10sp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="20sp"
        android:textColor="@color/Black"
        android:singleLine="true" />



</RelativeLayout>
